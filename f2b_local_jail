# Ahmed Attalla
# Secure_Apache 1.0
# Fail2Ban local jail
# To stop DOS attack from remote host.
[http-get-dos]
enabled = true
port = http,https
filter = http-get-dos
logpath = /var/log/apache*/access.log
maxretry = 400
findtime = 400
bantime = 600
ignoreip = 127.0.0.1
action = iptables[name=HTTP, port=http, protocol=tcp]
